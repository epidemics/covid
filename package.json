{
  "name": "covid",
  "version": "1.0.0",
  "description": "Covid project",
  "directories": {
    "test": "tests"
  },
  "contributors": [
    "Daniel Hnyk <hnykda@gmail.com>",
    "Mathijs Henquet <mathijs.henquet@gmail.com>"
  ],
  "scripts": {
    "lint": "yarn run lint-check",
    "lint-write": "prettier --write \"frontend/**\" \"server/*\" \"static/css/**\"",
    "lint-check": "prettier --check \"frontend/**\" \"server/*\" \"static/css/**\"",
    "build": "env NODE_ENV=production ts-node build.ts",
    "build-dev": "env NODE_ENV=development ts-node build.ts",
    "serve": "ts-node server/server.ts",
    "dev": "nodemon",
    "test": "mocha -r ts-node/register tests/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epidemics/covid.git"
  },
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/epidemics/covid/issues"
  },
  "homepage": "https://github.com/epidemics/covid#readme",
  "devDependencies": {
    "@types/bootstrap": "^4.3.2",
    "@types/d3": "^5.7.2",
    "@types/jquery": "^3.3.34",
    "@types/mocha": "^7.0.2",
    "@types/moment": "^2.13.0",
    "@types/plotly.js": "^1.50.1",
    "@types/supertest": "^2.0.8",
    "core-js": "^3.6.4",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.2"
  },
  "dependencies": {
    "@types/chroma-js": "^2.0.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.4",
    "@types/morgan": "^1.9.0",
    "@types/nunjucks": "^3.1.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-plotly.js": "^2.2.4",
    "@types/webpack": "^4.41.10",
    "@types/webpack-dev-middleware": "^3.7.0",
    "bootstrap": "^4.4.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-dev-middleware": "^3.7.2"
  },
  "nodemonConfig": {
    "exec": "yarn serve",
    "watch": [
      "server",
      "package.json",
      "webpack.config.ts",
      "frontend/tsconfig.json"
    ],
    "ext": "ts,tsc,html"
  }
}
