{
  "name": "covid",
  "version": "1.0.0",
  "description": "Covid project",
  "directories": {
    "test": "tests"
  },
  "contributors": [
    "Daniel Hnyk <hnykda@gmail.com>",
    "Mathijs Henquet <mathijs.henquet@gmail.com>"
  ],
  "scripts": {
    "lint": "prettier --check \"frontend/**\" \"server/*\" \"static/css/**\"",
    "apply-lint": "prettier --write \"frontend/**\" \"server/*\" \"static/css/**\"",
    "build": "ts-node --skip-project build.ts",
    "build-dev": "env NODE_ENV=development ts-node --skip-project build.ts",
    "serve": "ts-node --skip-project server/server.ts",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epidemics/covid.git"
  },
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/epidemics/covid/issues"
  },
  "homepage": "https://github.com/epidemics/covid#readme",
  "devDependencies": {
    "@types/bootstrap": "^4.3.2",
    "@types/compression": "^1.7.0",
    "@types/d3": "^5.7.2",
    "@types/jquery": "^3.3.34",
    "@types/moment": "^2.13.0",
    "@types/plotly.js": "^1.50.1",
    "core-js": "^3.6.4",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.2",
    "nodemon": "^2.0.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "@types/express": "^4.17.4",
    "compression": "^1.7.4",
    "nunjucks": "^3.2.1",
    "typescript": "^3.8.3",
    "ts-node": "^8.8.1",
    "webpack": "^4.42.1",
    "@types/webpack": "^4.41.10",
    "webpack-dev-middleware": "^3.7.2"
  },
  "nodemonConfig": {
    "exec": "yarn serve",
    "watch": [
      "server",
      "package.json",
      "webpack.config.ts"
    ],
    "ext": "ts,tsc,html"
  },
  "prettier": {
    "htmlWhitespaceSensitivity": "ignore"
  }
}
