{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["frontend/@types/*"]
    },
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "server/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}